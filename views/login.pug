extends main
block content
   h1= title

   div(class="error")= errorMessage
   
   .container.col-md-4.col-md-offset-4.shadow.p-3.mb-5.bg-white.rounded
     form(method="post", action="/processLogin")
        div.form-group
          label(for="username") Username:
          input.form-control(type="text",
                id="username",
                name="username",)
          label(for="password") Password:
          input.form-control(type="password",
                id="password",
                name="password")
          br      
          button.btn.btn-primary(class="control row3") Log In
