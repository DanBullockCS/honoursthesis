include main

block content
append head 
      script(language='JavaScript' type='text/javascript' src='/scripts/register.js')
      br
      if (errorMessage)
            div.container.col-md-6.col-md-offset-4.shadow.p-3.mb-5.bg-white.rounded(style="color: red;")= errorMessage
      h1.pagetitle= title
      br
      .container.col-md-4.col-md-offset-4.shadow.p-3.mb-5.bg-white.rounded
            h4 Create your account
            form(name="register_form" action="/processRegistration" method="post")
                  div.form-group
                        label(for='username') Username:
                        input.form-control(type='text',
                              id='username',
                              name='username',
                              onfocusout='validateUsername(document.register_form.username)' autofocus)
                        p(id="username_valid" style="text-align: right; color: red;") 
                        label(for='email') Email:
                        input.form-control(type='text',
                              id='email',
                              name='email'
                              onfocusout='validateEmail(document.register_form.email)')
                        p(id="email_format" style="text-align: right; color: red;") 
                        label(for='pwd') Password:
                        input.form-control(type='password',
                              id='pwd',
                              name='pwd'
                              onkeyup='check();')
                        br
                        label(for='confirm_pwd') Confirm Password:
                        input.form-control(type='password',
                              id='confirm_pwd',
                              name='confirm_pwd'
                              onkeyup='check();')
                        p(id="pwd_match" style="text-align: right; color: red;")  
                        button.btn.btn-primary(id='register_btn' type='submit' disabled) Register
